@using AplicatieClinicaAnalize.Data.ViewModels;

@model RegisterVM;

@{
    ViewData["Title"] = "Creati un account nou";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Creati un account nou</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control"/>
                    </div>

                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control"/>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control"/>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-end" type="submit" value="Creaza Account" />
                        <a class="btn btn-outline-secondary" asp-controller="Analize" asp-action="Index">Cancel</a>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>