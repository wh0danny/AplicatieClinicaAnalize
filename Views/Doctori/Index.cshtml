@model IEnumerable<Doctor>

@{
    ViewData["Title"] = "Lisa Doctori";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PozaDeProfilURL)</th>
                    <th>@Html.DisplayNameFor(model => model.NumeDoctor)</th>
                    <th>@Html.DisplayNameFor(model => model.DespreDoctor)</th>
                    <th>Actiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.PozaDeProfilURL" alt="@item.NumeDoctor" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NumeDoctor)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DespreDoctor)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a> 
                        </td>
                    </tr>
                }
            </tbody>

            <tr>
                <td></td>
            </tr>

        </table>

    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Doctori" asp-action="Create" class="btn btn-success"><i class="bi bi-person-add"></i> Adauga Doctor </a> 
</div>