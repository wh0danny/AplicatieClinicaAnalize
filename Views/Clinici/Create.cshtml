@model Clinica

@{
    ViewData["Title"] = "Adauga Clinica";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Adauga o noua Clinica</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div style="margin-bottom: 10px;" class="form-group text-center">
                        <img id="LogoClinicaPreview" />
                    </div>

                    <div style="margin-bottom: 10px;" class="form-group">
                        <label asp-for="LogoClinica" class="control-label"></label>
                        <input asp-for="LogoClinica" class="form-control" />
                        <span asp-validation-for="LogoClinica" class="text-danger"></span>
                    </div>

                    <div style="margin-bottom: 10px;" class="form-group">
                        <label asp-for="NumeClinica" class="control-label"></label>
                        <input asp-for="NumeClinica" class="form-control" />
                        <span asp-validation-for="NumeClinica" class="text-danger"></span>
                    </div>

                    <div style="margin-bottom: 10px;" class="form-group">
                        <label asp-for="DescriereClinica" class="control-label"></label>
                        <input asp-for="DescriereClinica" class="form-control" />
                        <span asp-validation-for="DescriereClinica" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Adauga Clinica" class="btn btn-outline-success float-end"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Afisaza toate Clinicile</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function (){
            var output = document.getElementById('LogoClinicaPreview');
            output.src = $("#LogoClinica").val();
        })

        $("#LogoClinica").on("change", function () {
            var output = document.getElementById('LogoClinicaPreview');
            output.src = $(this).val();
        })
    </script>
}