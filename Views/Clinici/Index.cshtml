@model IEnumerable<Clinica>

@{
    ViewData["Title"] = "Lisa Clinici";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.LogoClinica)</th>
                    <th>@Html.DisplayNameFor(model => model.NumeClinica)</th>
                    <th>@Html.DisplayNameFor(model => model.DescriereClinica)</th>
                    <th>Actiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="square" src="@item.LogoClinica" alt="@item.NumeClinica" style="max-width: 300px; max-height: 300px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NumeClinica)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DescriereClinica)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a> 
                        </td>
                    </tr>
                }
            </tbody>

            <tr>
                <td></td>
            </tr>

        </table>

    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Clinici")