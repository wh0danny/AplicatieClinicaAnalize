@model Clinica

@{
    ViewData["Title"] = "Sterge Clinica";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Stergeti clinica @Model.NumeClinica ?</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div style="margin-bottom: 10px;" class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="LogoClinicaPreview" />
                    </div>

                    <div style="margin-bottom: 10px;" class="form-group">
                        <label asp-for="LogoClinica" class="control-label"></label>
                        <input asp-for="LogoClinica" class="form-control" readonly />
                        <span asp-validation-for="LogoClinica" class="text-danger"></span>
                    </div>

                    <div style="margin-bottom: 10px;" class="form-group">
                        <label asp-for="NumeClinica" class="control-label"></label>
                        <input asp-for="NumeClinica" class="form-control" readonly />
                        <span asp-validation-for="NumeClinica" class="text-danger"></span>
                    </div>

                    <div style="margin-bottom: 10px;" class="form-group">
                        <label asp-for="DescriereClinica" class="control-label"></label>
                        <input asp-for="DescriereClinica" class="form-control" readonly />
                        <span asp-validation-for="DescriereClinica" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form asp-action="DeleteConfirm">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Afisaza toate clinicile</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function (){
            var output = document.getElementById('LogoClinicaPreview');
            output.src = $("#LogoClinica").val();
        })
    </script>
}